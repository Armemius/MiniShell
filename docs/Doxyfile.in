# Doxyfile.in
PROJECT_NAME           = @PROJECT_NAME@
PROJECT_NUMBER         = @PROJECT_VERSION@
OUTPUT_DIRECTORY       = @CMAKE_CURRENT_BINARY_DIR@
USE_MDFILE_AS_MAINPAGE = README.md
EXTENSION_MAPPING      = md=markdown
INPUT                  = @CMAKE_SOURCE_DIR@/README.md @CMAKE_SOURCE_DIR@/include @CMAKE_SOURCE_DIR@/src
INPUT_ORDER            = @CMAKE_SOURCE_DIR@/README.md @CMAKE_SOURCE_DIR@/include @CMAKE_SOURCE_DIR@/src
RECURSIVE              = YES
GENERATE_LATEX         = NO
GENERATE_HTML          = YES
SOURCE_BROWSER         = YES
FILE_PATTERNS          = *.h *.hpp *.c *.cpp *.md
